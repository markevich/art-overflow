.profil-form
  .profil-form-container
    = simple_form_for(resource) do |f|
      .name
        %label
          Имя и Фамилия
        = f.input :name, placeholder: 'markevich', label: false
      .avatarka
        %label
          Аватар
          %span
            84*84 jpg. или .png
        .image-profile
          = image_tag(resource.avatar)
          .change-avatar
            = link_to "Сменить аватар", avatar_edit_user_path(resource), class: 'btn btn-blue'
      %div
        %label
          Электронная почта
        = f.input :email, placeholder: 'markevich@gmail.com', label: false
      %div
        %label
          Город
        = f.input :city, placeholder: 'Минск', label: false
      %div
        %label
          Ник
        .collapse
          %span.prefix
            vk.com/
          = f.input :vk, placeholder: 'wine', label: false
      %div
        = f.submit "Сохранить", class: 'btn btn-green'
