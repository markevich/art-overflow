%h2.edit-profil
  Настройки профиля
.profil-menu
  %ul
    %li.active
      %a
        Личные данные
.profil-form
  .profil-form-container
    = simple_form_for(resource) do |f|
      .name
        %label
          Имя
        = f.input :name, placeholder: 'Johny', label: false
      .avatarka
        %label
          Аватар
          %span
            100*100 jpg. или .png
        .image-profile
          = image_tag(resource.avatar)
          .change-avatar
            = link_to_modal "Сменить аватар", edit_user_avatar_path(resource),
              data: { remote: true }, class: 'btn btn-blue js-trigger-uploader'
      %div
        %label
          Город
        = f.input :city, placeholder: 'Минск', label: false
      %div
        %label
          Вконтакте
        .collapse
          %span.prefix
            vk.com/
          = f.input :vk, placeholder: 'wine', label: false
      %div
        = f.submit "Сохранить", class: 'btn btn-green'
