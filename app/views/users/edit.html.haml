.row
  .large-12.columns
    %h2.edit-profil
      Настройки профиля
.profil-menu
  .row
    .large-12
      %ul.small-block-grid-6
        %li
          %a
            Личные данные
          =image_tag("arrowblue.png")
        %li
          %a
            Пароль
        %li
          %a
            Уведомления
        %li
          %a
            Приватность
        %li
          %a
            Продажа
        %li
          %a
            Тэги
.profil-form
  .row
    .large-6
      = simple_form_for(@user) do |f|
        .row
          .large-12.columns
            %label
              Имя и Фамилия
            = f.input :name, placeholder: 'markevich', label: false
        .row.avatarka
          .large-12.columns
            %label
              Аватар
              %span
                84*84 jpg. или .png
            .row
              .small-4.large-2.columns
                = image_tag(@user.avatar)
              .small-8.large-10.columns
                = link_to "Сменить аватар", avatar_edit_user_path(@user), class: 'btn btn-blue'
        .row
          .large-12.columns
            %label
              Электронная почта
            = f.input :email, placeholder: 'markevich@gmail.com', label: false
        .row
          .large-12.columns
            %label
              Город
            = f.input :city, placeholder: 'Минск', label: false
        .row
          .large-12.columns
            %label
              Ник
            .row.collapse
              .small-3.large-2.columns
                %span.prefix
                  vk.com/
              .small-9.large-10.columns
                = f.input :vk, placeholder: 'wine', label: false
        .row
          .large-12.columns
            = f.submit "Сохранить", class: 'btn btn-green'
