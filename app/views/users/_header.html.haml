%div{'data-check-user' => true, 'data-user-id' => @user.id}
.row.profil
  .large-2.columns
    =image_tag(@user.avatar)
  .large-5.columns
    %h3
      = @user.name
    %sup
      %span.grey
        = @user.name
      - if @user.premium?
        %span.red
          PRO
    .social
      %a
        %span.blue
          =image_tag("locationGr.png")
          = @user.city
      %a
        %span.blue
          =image_tag("glob.png")
          winniehooper.com
      %span.blue
        %a
          =image_tag("twitterGr.png")
        %a{href: "http://vk.com/#{@user.vk}"}
          =image_tag("vkGr.png")
    = render 'users/follow_button', following: @following, user: @user
  .large-5.columns
    .user-counters
      .likes
        .top
        .bottom
        .count
          = @user.likes_count
        %span.blue
          Симпатий
      .followers
        .top
        .bottom
        .count
          = @user.followers_count
        %span.blue
          Подписчика
      .follows
        .top
        .bottom
        .count
          = @user.follows.count
        %span.blue
          Подписок
.profil-menu
  .row
    .large-12
      %ul.small-block-grid-6
        %li
          %a{href: latest_user_pictures_path(@user)}
            = I18n.t('pictures.latest')
          =image_tag("arrowblue.png")
        %li
          %a{href: popular_user_pictures_path(@user)}
            Популярные
        %li
          %a
            Альбомы
