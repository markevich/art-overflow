= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-vertical'}) do |f|
  %h2{style: "text-align:center;"} Sign up
  = f.error_notification
  
  = f.input :name, :wrapper => :prepend do
    %span.add-on
      %i.icon-user
    = f.input_field :name

  = f.input :email, :wrapper => :prepend do
    %span.add-on
      %i.icon-envelope
    = f.input_field :email

  = f.input :password, :wrapper => :prepend do
    %span.add-on
      %i.icon-lock
    = f.input_field :password

  = f.input :password_confirmation, :wrapper => :prepend do
    %span.add-on
      %i.icon-ok
    = f.input_field :password_confirmation

  = f.button :submit, 'Sign up'
= render "devise/shared/links"
