.authorization
  .container-authorization
    .container-authorization-left
      =image_tag("login.png")
    .container-authorization-right
      %h1
        Авторизация
      .form-authorization
        = simple_form_for(resource, :as => resource_name, :url => user_session_path) do |f|
          = f.input :email, label: false, placeholder: 'Email'
          = f.input :password, label: false, placeholder: 'Пароль'
          .action
            = f.submit t('user.sign_in'), class: 'button-authorization'
            = link_to t('user.forgot_password'), '#', class: 'grey forgot-password'
      .container-authorization-registration
        .join-us.grey
          Еще не с нами?
          = link_to t('user.registration'), new_user_registration_path, class: 'grey'




