.row
  .message-comment.large-1.columns
    = image_tag 'images.jpg', class: "border-radius-circle"
  .input-comment.large-11.columns
    %p.blue
      = comment.user.name
      %span.grey
        %span.star
          *
        1 час назад
      %span.count-right.likes_count.grey
        = comment.likes_count
      = image_tag 'heart_normal.png'

      -# TODO: handle parent of comment by js
      -# %li.name-user
      -#   %span.arrow-answer
      -#     = image_tag 'arrow_ansmer.gif'
      -#   = comment.parent.user.email if comment.child?

      .txt-comment
        = comment.text
      .reply-to-comment
        %a
          Ответить
        = link_to t('comment.destroy'), comment_path(comment), method: :delete, data: { confirm: t('comment.confirm_destroy') }
        = render 'comments/like_button', comment: comment
    %hr
    .reply-to-comment-container
      = render 'comments/form', commentable: commentable
