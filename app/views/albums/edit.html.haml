= render current_user.to_header_path, resource: current_user
= render partial: 'albums/album_edit_header_menu', locals: { resource: resource }

.edit-container
  %div
    .image-edit-album
      = image_tag 'img-1.png', class:"img-follow"
      %a
        Изменить обложку
      %br
        = link_to 'Удалить альбом', album_path(resource), method: :delete
    .form-edit-album
      = simple_form_for([parent, resource]) do |f|
        = f.input :name
        = f.input :description
        = f.button :submit, value: 'Сохранить изменения',class: 'btn btn-green'
