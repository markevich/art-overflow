= render parent.to_header_path, resource: parent
.image-block
  .container
    %a.added{href: new_user_album_path(parent)}
      %span.plus
      .name
        Создать альбом

%h1 New album

#newAlbum.modal-content
  = simple_form_for([parent, resource]) do |f|
    %h1
      Создать альбом
      %span.close
        x
    = f.input :name
    = f.input :description
    %a.close-reveal-modal
      &#215;
    = link_to 'Отмена', url_for([parent, :albums]),class: 'close-modal'
    = f.button :submit, value: 'Создать альбом',class: 'btn btn-green'

.modal-background
