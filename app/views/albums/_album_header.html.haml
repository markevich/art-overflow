.profil.show-user-album
  .description-user-album
    =image_tag(Picture.first.path)
    .comuns-description-user-album
      %h3
        = resource.name
      %a{ href: user_pictures_path(resource.user) }
        = resource.user.name
      %div
        = resource.description
  .profil-data
    .user-counters
      .likes
        .top
        .bottom
        .count
          = resource.pictures.count
        %span.blue
          Симпатий
