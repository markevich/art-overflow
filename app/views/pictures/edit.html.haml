= render current_user.to_header_path, resource: current_user
= render partial: 'pictures/edit_navigation', locals: { resource: resource }

.edit-container
  %div
    .image-edit-album
      = image_tag resource.path, class:"img-follow"
      %br
        = link_to 'Удалить картинку', picture_path(resource), method: :delete, data: { confirm: 'Вы уверены?' }
    .form-edit-album.new-picture-description
      = simple_form_for([parent, resource], html: { id: 'edit_picture_form' }) do |f|
        = f.input :name
        = f.input :description
        = f.input :tag_list

        = f.input :category_list, as: :hidden
        .setings
        .container-category
          Категории
        .category-params
          - Picture::CATEGORIES.each_with_index do |category, index|
            %div.image-edit-album-category
              %label
                = check_box_tag "category#{index}", category, resource.category_list.include?(category), style: "width: 20px; float: left", class: "category_checkbox"
                %span
              = label_tag "category#{index}", category, class: "boolean optional control-label checkbox"

        = f.association :album, collection: current_user.albums
        = f.button :submit, value: 'Сохранить изменения',class: 'btn btn-green'
