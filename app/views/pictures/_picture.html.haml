.picture-container
  = cache [picture, picture.user] do
    .image-block
      /%h1
      /  = picture.name
      %a{href: picture_path(picture)}
        = image_tag picture.path.small_thumb, class: 'picture'
        .info
          %h5= truncate(picture.name, length: 40)
        .name
          = link_to truncate(picture.user_name, length: 35), [picture.user, :pictures]
