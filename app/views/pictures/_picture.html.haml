= cache picture do
  .image-block
    /%h1
    /  = picture.name
    %a{href: picture_path(picture)}
      .info
        %h5= truncate(picture.name, length: 20)
        %p
          = truncate(picture.description, length: 150)
      = image_tag picture.path.small_thumb, class: 'picture'
      .name
        = link_to truncate(picture.user_name, length: 20), [picture.user, :pictures]
      .picture-actions
        - if user_signed_in? && current_user.liked?(picture)
          %div.heart_normal.active
        - else
          %div.heart_normal
        %span
          = picture.likes_count
