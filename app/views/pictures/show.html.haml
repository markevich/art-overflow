.span8
  = image_tag @picture.path, class: 'thumbnail big_image'
  %h3
    = @picture.name
.span4
  .info-area{style: ''}
    %img{style: 'width:50px; height:50px; float:left; margin-right:10px;'}
    .title{style: 'padding-left:5px;'}
      = @picture.name
    .author
      = @picture.user
  .description{style: 'clear:both; margin-top:25px;'}
    Tags:
    = text_field_tag :tags, @picture.tag_list
  .comments-area
    = render partial: 'the_comments/tree', locals: { commentable: @picture, comments_tree: @comments }

- if current_user && @picture.user != current_user
  = render partial: 'unlike_button'
  = render partial: 'like_button'
  - if current_user.voted_on?(@picture)
    :javascript
      $('#unlike_button').show()
  - else
    :javascript
      $('#like_button').show()
