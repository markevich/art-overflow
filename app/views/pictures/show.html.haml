.row.user-content
  .large-12.columns.user
    = image_tag 'images.jpg', class: "border-radius-circle"
    %h1
      Nice drawing
    %p.blue
      Slava Markevich
      %span.grey
        %span.star
          *
        1 час назад
      %span.grey
        %span.star
          *
        \#мост
  .row.picture-show
    .large-12.columns
      = image_tag '1.png', class: ''
  .picture-actions.row
    .large-12.columns.small-4
      .js-button-watch.button-toggler{ data: { voted: @voted}}
        = render 'pictures/like_button'
      = render partial: 'users/follow_button', locals: {following: @following, user: @picture.user}
      .btn-blue.share
        %input{type:'submit', class:'', value:"Поделиться"}
          = image_tag 'follow.gif', class:"img-follow"
      .btn-green
        %input{type:'submit', class:'btn-g-input', value: "Купить $"}
.bg-comments
  .row.comments
    .large-7.columns
      .row
        .large-12.columns.title
          %h1
            Комментарии (#{@picture.comments_count})
          %p
            Последние
          %p.blue
            = image_tag 'arrow_bottom.gif'
            Популярные
      = render 'comments/form', commentable: @picture
      .user-comment
        = render @comments, commentable: @picture
    .other-job-right.large-5.columns
      %h1
        Другие работы
      %p.blue
        Коли
      %ul.img-other-job.large-block-grid-3.small-block-grid-1
        %li
          %a
            =image_tag 'other-job.gif'
        %li
          %a
            =image_tag 'other-job.gif'
        %li
          %a
            =image_tag 'other-job.gif'
        %li
          %a
            =image_tag 'other-job.gif'
        %li
          %a
            =image_tag 'other-job.gif'
      .information
        %h1
          Ads via The Deck
        %p
          = image_tag 'th.gif'
          %p.txt-news-comment
            New Field Notes Brand limited-release for summer,
          %a.link-news-comment
            The Night Sky Edition.
    %a#button_load_more.show_comment_all{href: '#', data: { scroller_trigger: true }}
      = I18n.t('pictures.show_more')
