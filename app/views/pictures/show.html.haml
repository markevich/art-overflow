//верхняя панель 'о пользователе'
%section.row.user-content
  .large-12.columns
    = image_tag 'images.jpg', class: "border-radius-circle user"
    %h1
      = resource.name
    %p.blue
      = link_to resource.user_name, resource.user
      %span.grey
        %span.star
          *
        1 час назад
      %span.grey
        %span.star
          *
        \#мост

//показ картинки
.picture-show.text-align.bg-grey{class: "imgWrap"}
  = image_tag resource.path,:data => {'adaptive-background' => '1'}

//кнопки под картинки
%section.picture-actions.row
  .large-12.columns.small-4
    = render 'pictures/like_button', voted: @voted
    = render partial: 'users/follow_button', locals: {following: @following, user: resource.user}
    %a.btn.btn-blue
      Поделиться
      = image_tag 'follow.gif', class:"img-follow"

//комментарии
.bg-light-grey
  %section.row.comments
    .large-7.columns
      .row
        .large-12.columns.title
          %h1
            Комментарии (#{resource.comments_count})
          %p
            Последние
          %p.blue
            = image_tag 'arrow_bottom.gif'
            Популярные
      = render 'comments/form', commentable: resource if user_signed_in?
      .user-comment
        = render resource.comments.includes(:user), commentable: resource

    .other-job-right.large-5.columns
      %h1
        Другие работы
      %p.blue
        = link_to(resource.user_name, resource.user)
        %ul.large-block-grid-3.small-block-grid-1
          - most_popular_pictures(resource.user).each do |pic|
            %li
              %a{href: picture_path(pic)}
                = image_tag pic.path.thumb
      .information
        %h1
          Ads via The Deck
        %p
          = image_tag 'th.gif'
          %p
            New Field Notes Brand limited-release for summer,
            %a
              The Night Sky Edition.

