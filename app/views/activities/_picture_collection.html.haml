.activity
  .border
  .time-container
    = image_tag 'activity-upload.png'
    %div
      = time_passed_from_creation(picture_collection)
  .activity-container
    .main-activity-avatar
      %a{href: user_pictures_path(picture_collection.owner)}
        = image_tag picture_collection.owner.avatar
    .activity-content
      .activity-owners
        = link_to picture_collection.owner.name, [picture_collection.owner, :pictures]
        = "#{declinatie('загрузил', 'загрузила', picture_collection.owner)} #{picture_collection.count} "
        = I18n.t('counters.uploaded_pictures', count: picture_collection.count)

      - picture_collection.each_slice(3) do |pictures|
        .pictures-row
          - pictures.each do |picture|
            %a{href: picture_path(picture)}
              = image_tag picture.path.thumb, class: 'picture'
